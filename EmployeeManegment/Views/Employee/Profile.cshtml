@model Common.Model.EmployeeModel

@{
    ViewData["Title"] = "Profile";
}

<section class="vh" style="background-color:aquamarine;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="@Model.ProfileImg" alt="Avatar" class="img-fluid my-5" />
                            <h5>@Html.DisplayFor(model => model.Name)</h5>
                            <p>@Html.DisplayFor(model => model.Department)</p>
                            <i class="fa fa-edit  editIcon"></i>
                            <a style="text-decoration: none;" asp-controller="Employee" asp-action="Login" class="buttonLogout">Logout</a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Gender</h6>
                                        <p class="text-muted">
                                            @Html.DisplayFor(model => model.Gender)
                                        </p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Salary</h6>
                                        <p class="text-muted">
                                            @Html.DisplayFor(model => model.Salary)
                                        </p>
                                    </div>
                                </div>
                                <h6>Additional</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Start From :</h6>
                                        <p class="text-muted">
                                            @Html.DisplayFor(model => model.StartDate)
                                        </p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Remarks</h6>
                                        <p class="text-muted">
                                            @Html.DisplayFor(model => model.Notes)
                                        </p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-start">
                                    @Html.ActionLink("Delete", "Delete", new { id = Model.EmpId }, new { onclick = "return confirm('Are you sure you want to delete this Profile?');", @class = "buttonDeleteDetails" })
                                    @Html.ActionLink("Edit", "Edit", new { Model.EmpId }, new { @class = "buttonEditDetails", @style = "text-decoration: none;" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


