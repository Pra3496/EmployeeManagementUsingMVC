@model Common.Model.EmployeeModel

@{
    ViewData["Title"] = "Create";
}



<hr />
<div class="row ">
    <div class="col-4"></div>
    <div class="col-md-4 registration shadow-lg card py-3">
        <form asp-action="Create">
            <h1>Registration</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImg" class="control-label">Profile</label><br>
                <input type="radio" asp-for="ProfileImg" value="/images/prof1.png" />
                <img src="~/images/prof1.png" style=" height:50%;margin-left:3%" alt="Avatar">
                <input type="radio" asp-for="ProfileImg" value="/images/prof2.png" style="margin-left:4%" />
                <img src="~/images/prof2.png" style=" height:50%;margin-left:3%" alt="Avatar">
                <input type="radio" asp-for="ProfileImg" value="/images/prof3.png" style="margin-left:4%" />
                <img src="~/images/prof3.png" style=" height:50%;margin-left:3%" alt="Avatar">
                <input type="radio" asp-for="ProfileImg" value="/images/prof4.png" style="margin-left:4%" />
                <img src="~/images/prof4.png" style="width=50%; height:50%;margin-left:3%" alt="Avatar">
                <span asp-validation-for="ProfileImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select class="form-control" asp-for="Gender">
                    <option>Select Gender</option>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <select class="form-control" asp-for="Department">
                    <option>Select Department</option>
                    <option value="IT and Software">IT and Software</option>
                    <option value="Research And Development">Research And Development</option>
                    <option value="Marketing and Sales">Marketing and Sales</option>
                    <option value="Tele-Communication">Tele-Communication</option>
                    <option value="HR and Audit">HR and Audit</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
